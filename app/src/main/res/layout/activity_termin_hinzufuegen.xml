<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".terminHinzufuegen"
    android:orientation="vertical">

    <EditText
        android:id="@+id/terminTitel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="text"
        android:hint="Terminname"></EditText>

    <DatePicker
        android:id="@+id/terminDatum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </DatePicker>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/terminBemerkung"
        android:inputType="text"
        android:hint="Notizen"/>


    <Switch
        android:id="@+id/erinnerung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Erinnerung"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/speichern"
        android:text="Speicher"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/abbrechen"
        android:text="abbrechen"/>


</LinearLayout>
</ScrollView>